<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        body {
            background: #222D32;
            font-family: 'Roboto', sans-serif;
        }

        .login-title {
            margin-top: 15px;
            text-align: left;
            font-size: 30px;
            letter-spacing: 2px;
            margin-top: 15px;
            font-weight: bold;
            color: #ECF0F5;
            padding-left: 150px;
        }

        .control-label {
            font-size: 15px;
            color: #b9b2b2;
            font-weight: bold;
            letter-spacing: 1px;
            padding-left: 150px;
        }

        .form-control{
            padding-left: 150px;
        }

    </style>

    <title>@Model.PageTitle</title>
</head>
<body>
    <div class="container">
        <nav class="navbar  bg-dark navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-action="index" asp-controller="home" class="nav-link">Home </a>
                </li>
                @*<li class="nav-item">
                        <a asp-action="index" asp-controller="home" class="nav-link">List </a>
                    </li>*@

            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <input type="hidden" id="useremail" name="useremail" value="@(Model.UserEmail = Model.Email)" />
                    <input type="hidden" id="rolesname" name="rolesname" value="@(Model.RolesName = Model.RoleName)" />
                    <a class="nav-link" href="@Url.Action("usercontactdetails", "userregistrationcontroller", new { Model.UserEmail, Model.RolesName})">Profile</a>
                    <!--asp-action="usercontactdetails" asp-controller="userregistrationcontroller" asp-route-model="Model"-->
                </li>
            </ul>


        </nav>

    </div>
    <div class="row">
        <div class="">
            <form class="form-horizontal" method="POST">
                <fieldset>

                    <!-- Form Name -->
                    <legend class="login-title">@Model.PageTitle</legend>

                    @if(Model.PageTitle != "Hospital Details")
                    {

                    <!-- Text input-->
                    <div class="control-group">
                        <label class="control-label" for="email">Email</label>

                        <input type="text" id="email" name="email" value="@Model.UserDetails.Email" class="input-xlarge" style="margin-left: 45;" readonly>

                    </div>


                    <!-- Text input-->
                    <div class="control-group">
                        <label class="control-label" for="firstname">First Name</label>

                        <input type="text" id="firstname" name="firstname" value="@Model.UserDetails.FirstName" class="input-xlarge">

                    </div>

                    <div class="control-group">
                        <label class="control-label" for="lastname">Last Name</label>

                        <input type="text" id="lastname" name="lastname" value="@Model.UserDetails.LastName" class="input-xlarge">

                    </div>
                    }
                    <!-- Text input-->
                    <div class="control-group">
                        <label class="control-label" for="address">Address</label>

                        <input type="text" id="address" name="address" value="@Model.UserDetails.Address" class="input-xlarge" style="margin-left: 15;">

                    </div>

                    <!-- Text input-->
                    <div class="control-group">
                        <label class="control-label" for="city">City</label>

                        <input type="text" id="city"name="city" value="@Model.UserDetails.City" class="input-xlarge" style="margin-left: 47;">

                    </div>

                    <!-- Text input-->
                    <div class="control-group">
                        <label class="control-label" for="state">State</label>

                        <input type="text" id="state" name="state" value="@Model.UserDetails.State" class="input-xlarge" style="margin-left: 38;">

                    </div>

                    <div class="control-group">
                        <label class="control-label" for="zip">Zip Code</label>

                        <input type="text" id="zip" name="zip" value="@Model.UserDetails.Zip" class="input-xlarge" style="margin-left: 5;">

                    </div>



                    <!-- Text input-->
                    <div class="control-group">
                        <label class="control-label" for="country">Country</label>

                        <input type="text" id="country" name="country" value="@Model.UserDetails.Country" class="input-xlarge" style="margin-left: 15;">

                    </div>

                    <!-- Text input-->
                    <div class="control-group">
                        <label class="control-label" for="extension">Extension</label>

                        <input type="text" id="extension" name="extension" value="@Model.UserDetails.Extension" class="input-xlarge">

                    </div>

                    <!-- Text input-->
                    <div class="control-group">
                        <label class="control-label" for="fax">Fax</label>

                        <input type="text" id="fax" name="fax" value="@Model.UserDetails.Fax" class="input-xlarge" style="margin-left: 50;">

                    </div>

                    <!-- Text input-->
                    <div class="control-group">
                        <label class="control-label" for="phone">Phone</label>

                        <input type="text" id="phone" name="phone" value="@Model.UserDetails.Phone" class="input-xlarge" style="margin-left: 28;">

                    </div>


                    <div class="control-group">
                        <div class="">
                            <div style="margin-left: 200;">
                                <button type="submit" class="btn btn-primary">Cancel</button>
                                <button asp-action="updateusercontactdetails" asp-controller="userregistrationcontroller" asp-route-model="new {@Model = @Model}" class="btn btn-primary">Save</button>
                                <button type="submit" class="btn btn-primary">Delete</button>
                            </div>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div><!-- /.col-lg-12 -->
    </div><!-- /.row -->
</body>
</html>